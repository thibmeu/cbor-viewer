{
  "manifest_version": 2,
  "name": "CBOR decoder",
  "version": "0.2.0",

  "description": "Decode incoming CBOR request to make them human readable.",

  "icons": {
    "48": "pen.svg"
  },

  "permissions": [
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "pen.svg",
    "default_title": "CBOR Viewer",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "browser_specific_settings": {
    "gecko": {
      "strict_min_version": "57.0a1"
    }
  }
}

